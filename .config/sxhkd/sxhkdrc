# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close and kill
super + shift + c
	bspc node -c

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# set the window state
#super + {t,shift + t,s,f}
	#bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#Toogle Floating 
super + shift + f
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

#Toogle Fullscreen 
super + f
	bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled

#Toogle Gaps
super + shift + g
	window_gap.sh
	
# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
alt + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel || bspc node -p cancel

###  Resize and Move ###
#
# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

####  Mouse Resize and Move  ###
##
## Mouse floating:
##
## Focus
#~button1
	#bspc pointer -g focus

## Start move/resize
#alt + button{1-3}
	#; bspc pointer -g {move,resize_side,resize_corner}

#alt + !button{1-3}
	#bspc pointer -t %i, %i

## End Move/Risize
#alt + @button{1-3}
	#bspc pointer -u


# Brighness control
XF86MonBrightnessUp
	xbacklight -inc 10		

XF86MonBrightnessDown
	xbacklight -dec 10		

#Audio Control
XF86AudioRaiseVolume
	pamixer --allow-boost -i 10

XF86AudioLowerVolume
	pamixer -d 10

XF86AudioMute
	pamixer -t 

#Screenshot
Print
	flameshot screen -p /home/sdk/Pictures/Screenshot

super + Print
	flameshot gui

#Applications
super + w
	$BROWSER

super + e
	code

super + m
	spotify

super + n
	nemo

super + {v,p,r}
	$TERMINAL -e {nvim,htop,ranger}

super + space
	rofi -show run -theme gruvbox-dark-hard.rasi
	#dmenu_run -p "Run   :"
	
super + shift + Return
	rofi -show drun -theme gruvbox-dark-hard.rasi -icon-theme "Tela-circle" -show-icons
	
# terminal emulator
super + Return
	$TERMINAL

super + alt + Return
	tdrop -ma -w 1916 -y 0 $TERMINAL

#Wallpaper
Insert
	wallpaper.sh

