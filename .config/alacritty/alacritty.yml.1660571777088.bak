# Importing colors file
import:
  - ~/.config/alacritty/colors.yml

# Set environment variables
env:
  TERM: alacritty
  WINIT_X11_SCALE_FACTOR: '1.5'

# Setting shell
shell: zsh

# Window Customization
window:
  dimensions:
    columns: 140
    lines: 38
  padding:
    x: 10
    y: 10
  decorations: full 
  opacity: 0.75

# Scrolling
scrolling:
  history: 10000
  multiplier: 3

window.dynamic_title: true

## Cursor
cursor:
  style:
    shape: Block
    blinking: On

  unfocused_hollow: false

## Live config reload
live_config_reload: true

draw_bold_text_with_bright_colors: true

# Font Customization
font:
  normal:
    family: CaskaydiaCove Nerd Font
    style: Regular
  bold:
    family: CaskaydiaCove Nerd Font
    style: Bold
  italic:
    family: CaskaydiaCove Nerd Font
    style: Italic
  size: 7.5
  offset:
    x: 0
    y: 0
  glyph_offset:
    x: 0
    y: 0
  use_thin_strokes: false
  debug:
    persistent_logging: false
